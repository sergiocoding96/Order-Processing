{
  "name": "pedidos-automation",
  "version": "1.0.0",
  "description": "Multi-channel order processing automation system",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node --max-old-space-size=400 --optimize-for-size --gc-interval=100 src/app.js",
    "start:production": "NODE_ENV=production node --max-old-space-size=400 --optimize-for-size --gc-interval=100 src/app.js",
    "build:production": "echo 'Creating production directories...' && mkdir -p logs tmp/uploads tmp/reports tmp/processing && echo 'Production build completed'",
    "dev": "node --watch src/app.js",
    "test": "node --test src/tests/**/*.test.js",
    "test:unit": "node --test src/tests/unit/**/*.test.js",
    "test:integration": "node --test src/tests/integration/**/*.test.js",
    "db:setup": "node scripts/setup-database.js",
    "db:health": "node scripts/setup-database.js",
    "db:maintenance": "node scripts/database-maintenance.js",
    "db:export": "node scripts/database-maintenance.js --export",
    "security:audit": "npm audit --audit-level high",
    "security:scan": "gitleaks detect --source . --verbose",
    "security:full": "npm run security:audit && npm run security:scan",
    "security:fix": "npm audit fix --force",
    "security:setup": "./scripts/setup-security.sh",
    "security:validate-env": "node -e \"import('./src/config/env-validator.js').then(m => console.log(JSON.stringify(m.validateEnvironment(), null, 2)))\"",
    "security:monitor": "node -e \"import('./src/utils/security-monitor.js').then(m => console.log(JSON.stringify(m.getSecuritySummary(), null, 2)))\"",
    "render:build": "npm ci --only=production && npm run build:production",
    "render:start": "npm run start:production"
  },
  "keywords": [
    "automation",
    "orders",
    "ai",
    "telegram",
    "outlook"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.45.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "multer": "^2.0.0-alpha.6",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^4.67.3",
    "pdf-parse": "^1.1.1",
    "pdf2pic": "^3.2.0",
    "puppeteer": "^23.5.0",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
